            <class name="Tests.Admin.Authentication.AdminInvalidLogin" />
            <class name="Tests.Admin.Authentication.AdminNoPasswordLogin" />
            <class name="Tests.Admin.Authentication.AdminNoUsernameLogin" />
            <class name="Tests.Admin.Authentication.AdminValidLogin" />
        </classes>
