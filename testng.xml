    <test name="CustomerAuthentication" parallel="false">
        <classes>
            <class name="Tests.CustomerAuthentication.CustomerInvalidLogin" />
            <class name="Tests.CustomerAuthentication.CustomerNoPasswordLogin" />
            <class name="Tests.CustomerAuthentication.CustomerValidLogin" />
