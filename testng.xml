            <class name="Tests.CustomerRegistration.CustomerRegistrationInvalidEmail" />
            <class name="Tests.CustomerRegistration.CustomerRegistrationNewUser" />
            <class name="Tests.CustomerRegistration.CustomerRegistrationNoFields" />
